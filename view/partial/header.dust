
<header class="site-header">

	<a href="/">{appName}</a>

	{! Header navigation (display only if setup is complete) !}
	{?settings.setupComplete}
		<nav>
			<ul>

				{! User login/logout !}
				{?user.isLoggedIn}
					<li>Logged in as {user.email} (<a href="/logout">Logout</a>)</li>
				{:else}
					<li><a href="/login">Login</a></li>
				{/user.isLoggedIn}

			</ul>
		</nav>
	{/settings.setupComplete}

</header>
